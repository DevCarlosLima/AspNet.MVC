@model IEnumerable<AspNet.MVC.Models.Cadastros.Usuario>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Usuários</h2>

<p>
    @Html.ActionLink("Criar Usuário", "Create", null, new {@class="btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th class="col-md-4">
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th class="col-md-3">
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th class="col-md-1">
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th class="col-md-2">
            @Html.DisplayNameFor(model => model.DataCadastro)
        </th>
        <th class="col-md-2">Opções</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCadastro)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit btn btn-warning", @title = "Editar"})
                @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-list btn btn-success", @title = "Detalhes" })
                @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-remove btn btn-danger", @title = "Deletar" })
            </td>
        </tr>
    }

</table>

